<%- include("../partials/header") %>
<div class="col-sm-3"></div>
<div class="col-sm-6 container mt-5">
    <div class="row justify-content-center d-flex flex-wrap">
        <h1>Edit Comment</h1>
        <div class="col-sm-8">
            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">         
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div> 
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-default">Submit!</button>           
                </div>    
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

</div>
<%- include("../partials/footer") %>

