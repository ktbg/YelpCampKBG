<%- include("../partials/header") %>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="container mt-5">
        <div class="form-row">
            <div class="col-sm-3 "></div>
            <div class="form-group col-sm-6  text-center">
                <h1>Edit <%= campground.name %></h1>
            </div>
        </div> 
        <div class="form-row">
            <div class="col-md-3">
                <label class="col-form-label float-md-right">Campground Name</label>    
            </div>
            <div class="form-group col-md-6">
            <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3">
                <label class="col-form-label float-md-right">Price</label>    
            </div>
            <div class="form-group col-md-6">
            <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3">
                <label class="col-form-label float-md-right">Image</label>    
            </div>
            <div class="form-group col-md-6">
            <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3">
                <label class="col-form-label float-md-right">Description</label>    
            </div>
            <div class="form-group col-md-6">
            <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
            </div>
        </div> 
        <div class="form-row">
            <div class="col-md-5"></div>
            <div class="form-group col-md-2">
                <button class="btn btn-lg btn-default btn-primary">Submit!</button>
            </div>
        </div>  
    </div>  
</form>
<div class="container">
    <div class="form-row">
        <div class="col-md-5"></div>
        <div class="form-group col-md-2">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div> 
</div>
<%- include("../partials/footer") %>