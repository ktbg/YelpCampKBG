<%- include("../partials/header") %>
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <h1 style="text-align: center">Create a New Campground</h1>
        <hr>
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-8">
                <form action="/campgrounds" method="POST">         
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name">
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url">
                    </div>  
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="descripton">
                    </div>  
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-default">Submit!</button>           
                    </div>        
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
            <!-- <div class="col-sm-4"></div> -->
        </div>       
    </div>
    <div class="col-sm-3"></div>
</div>

<%- include("../partials/footer") %>

